<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
    <ribbon>
        <tabs>
            <tab id="dotVisioTab" label="Dot Visio">

                <group id="actionsGroup" getLabel="GetLabel">
                    <button id="btnImportDot" getLabel="GetLabel" onAction="OnImportButtonClick"/>
                    <button id="btnImportDotGraphViz" getLabel="GetLabel" onAction="OnImportGraphVizButtonClick"/>
                    <button id="btnLayoutWithGraphViz" getLabel="GetLabel" onAction="OnLayoutWithGraphVizButtonClick"/>
                    <button id="btnRedrawBoundingBoxes" getLabel="GetLabel" onAction="OnRedrawBoundingBoxesButtonClick"/>
                    <button id="btnExportDot" getLabel="GetLabel" onAction="OnExportButtonClick"/>
                </group>

                <group id="grpLayout" getLabel="GetLabel">
                    <dropDown id="ddAlgorithm" getLabel="GetLabel" onAction="OnAlgorithmChanged" getSelectedItemID="GetSelectedItemID">
                        <item id="alg_dot" label="dot"/>
                        <item id="alg_neato" label="neato"/>
                        <item id="alg_fdp" label="fdp"/>
                        <item id="alg_sfdp" label="sfdp"/>
                        <item id="alg_circo" label="circo"/>
                        <item id="alg_osage" label="osage"/>
                        <item id="alg_patchwork" label="patchwork"/>
                    </dropDown>

                    <editBox id="txtAspectRatio" getLabel="GetLabel" onChange="OnAspectRatioChanged" getText="GetText" screentip="Ratio parameter. Ignored if equals to 0"/>

                    <dropDown id="ddOverlap" getLabel="GetLabel" onAction="OnOverlapChanged" getSelectedItemID="GetSelectedItemID">
                        <item id="overlap_false" label="false"/>
                        <item id="overlap_true" label="true"/>
                        <item id="overlap_scale" label="scale"/>
                        <item id="overlap_compress" label="compress"/>
                        <item id="overlap_ipsep" label="ipsep"/>
                        <item id="overlap_scalexy" label="scalexy"/>
                        <item id="overlap_ortho" label="ortho"/>
                        <item id="overlap_prism" label="prism"/>
                    </dropDown>

                    <dropDown id="ddRankDir" getLabel="GetLabel" onAction="OnRankDirChanged" getSelectedItemID="GetSelectedItemID">
                        <item id="rank_TB" label="TopToBottom"/>
                        <item id="rank_BT" label="BottomToTop"/>
                        <item id="rank_LR" label="LeftToRight"/>
                        <item id="rank_RL" label="RightToLeft"/>
                    </dropDown>

                </group>

                <group id="grpConnectorSettings" getLabel="GetLabel">
                    <dropDown id="ddConnectorStyle" getLabel="GetLabel" onAction="OnConnectorStyleChanged" getSelectedItemID="GetSelectedItemID">
                        <item id="conn_rightangle" label="right angle"/>
                        <item id="conn_straight" label="straight"/>
                        <item id="conn_graphviz" label="graphviz" screentip="Use connectors generated by GraphViz. Uses 2D shapes thus Visio auto-layout does not work"/>
                    </dropDown>

                    <dropDown id="ddConnectTo" getLabel="GetLabel" onAction="OnConnectToChanged" getSelectedItemID="GetSelectedItemID">
                        <item id="conn_glue" label="glue"/>
                        <item id="conn_centre" label="center"/>
                        <item id="conn_ideal" label="ideal"/>
                        <item id="conn_topbottom" label="topbottom"/>
                        <item id="conn_quadrant" label="quadrant"/>
                    </dropDown>
                </group>

                <group id="grpAdvancedSettings" getLabel="GetLabel">
                    <dropDown id="ddStrict" getLabel="GetLabel" onAction="OnStrictChanged" getSelectedItemID="GetSelectedItemID">
                        <item id="strict_false" label="false"/>
                        <item id="strict_true" label="true"/>
                    </dropDown>

                    <checkBox id="chkBoundingBoxes" getLabel="GetLabel" onAction="OnBoundingBoxesChanged" getPressed="GetPressed"/>

                    <editBox id="txtCommandOptions" getLabel="GetLabel" onChange="OnCommandOptionsChanged" getText="GetText"/>

                    <editBox id="txtSeed" getLabel="GetLabel" onChange="OnSeedChanged" getText="GetText"/>
                    
                    <dropDown id="ddExportPositions" getLabel="GetLabel" onAction="OnExportPositionsChanged" getSelectedItemID="GetSelectedItemId">
                        <item id="exportpositions_false" label="false"/>
                        <item id="exportpositions_inches" label="inches"/>
                        <item id="exportpositions_points" label="points"/>
                        <item id="exportpositions_forced_inches" label="forced inches" screentip="Adds optional '!' to position attributes. In GraphViz '!' indicates the node position should not change (input-only)."/>
                        <item id="exportpositions_forced_points" label="forced points" screentip="Adds optional '!' to position attributes. In GraphViz '!' indicates the node position should not change (input-only)."/>
                    </dropDown>
                </group>
                
                <group id="grpAppSettings" getLabel="GetLabel">
                    <checkBox id="chkUpdateWhileDrawing" getLabel="GetLabel" onAction="OnUpdateWhileDrawingChanged" getPressed="GetPressed"/>
                    <checkBox id="chkLimitFileSize" getLabel="GetLabel" onAction="OnLimitFileSizeChanged" getPressed="GetPressed"/>
                    <dropDown id="ddExtensionLanguage" getLabel="GetLabel" onAction="OnExtensionLanguageChanged" getSelectedItemID="GetSelectedItemID">
                        <item id="lang_en" label="en"/>
                        <item id="lang_ru" label="ru"/>
                    </dropDown>
                </group>

            </tab>
        </tabs>
    </ribbon>
</customUI>